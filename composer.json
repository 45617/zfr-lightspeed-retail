{
    "name": "45617/lightspeed-retail-api-client",
    "type": "library",
    "license": "MIT",
    "description" : "PHP library for interacting with the Lightspeed Retail REST API",
    "keywords": [
        "lightspeed",
        "retail",
        "pos",
        "api"
    ],
    "homepage": "https://github.com/45617/zfr-lightspeed-retail",
    "authors": [
        {
            "name": "Daniel Gimenes",
            "email": "daniel@danielgimenes.com.br"
        },
        {
            "name": "MichaÃ«l Gallego",
            "email": "mic.gallego@gmail.com",
            "homepage": "http://www.michaelgallego.fr"
        }
    ],
    "config": {
        "platform": {
            "php": "8.2"
        }
    },
    "require": {
        "psr/container": "^1.1",
        "guzzlehttp/command": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "guzzlehttp/guzzle-services": "^1.0",
        "guzzlehttp/psr7": "^2.0",
        "psr/http-message": "^1.0",
        "lcobucci/jwt": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpspec/prophecy-phpunit": "^2.4",
        "squizlabs/php_codesniffer": "^2.9",
        "laminas/laminas-servicemanager": "^4",
        "malukenho/docheader": "^0.1.5",
        "phpspec/prophecy": "^1.21",
        "rector/rector": "^2.3"
    },
    "suggest": {
        "laminas/laminas-servicemanager": "If you want to use built-in container factories"
    },
    "autoload": {
        "psr-4": {
            "ZfrLightspeedRetail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZfrLightspeedRetailTest\\": "test/"
        }
    },
    "scripts": {
        "autoload": "composer dump-autoload -o",
        "check": [
            "@cs-check",
            "@test",
            "@license-check"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "license-check": "vendor/bin/docheader check config src test ",
        "cleanInstall": "rm -rf vendor && composer install --optimize-autoloader"
    },
    "extra": {
        "zf": {
            "config-provider": [
                "ZfrLightspeedRetail\\ConfigProvider"
            ]
        }
    }
}
